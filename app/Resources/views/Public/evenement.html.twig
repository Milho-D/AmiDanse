{% extends 'base.html.twig' %}

{% block h1 %}
    <h1 id="main-title">Ev√©nements</h1>
{% endblock %}

{% block body %}
    <div class="row" style="padding-top: 40px">
        <div class="col-md-4 offset-md-4">
            <div id="courseDescriptionModel">
                <h2 style="text-align: center; margin-bottom: 15px">{{ evenement.nomEvenement }}</h2>
                <div class="row">
                    <div class="col-md-4 offset-md-2" style="margin: auto">
                        <img id="events-img" src="{% if evenement.imageLien %}
                            {{ asset('images/' ~ evenement.imageLien) }}
                            {% else %}
                                {{ asset('images/events_default.jpg') }}
                            {% endif %}"
                        />
                    </div>
                    <div class="col-md-4 offset-md-2" style="margin: auto">
                        <div class="container" style="align-items: flex-start">
                        <p style="font-weight: bold">{{ evenement.lieuEvenement }}</p>
                        <p><em>{{ evenement.dateEvenement|date('m/d/Y H:i') }}</em></p>
                        {% for cour in evenement.cours %}
                            <a href="{{ path('app_cours_show' ,{ id : cour.id}) }}">{{ cour.nomCours }}</a>
                        {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="row" style="height: 20px"></div>
            </div>
        </div>
    </div>
{% endblock %}