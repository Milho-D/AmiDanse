{% extends 'Admin/adminbase.html.twig' %}

{% block content %}
    <h1 id="main-title">Danses</h1>
    <div style="padding: 20px">
        <hr>
        <h2>Courants</h2>
        <button type="button" class="btn" style="margin-left: 20px">
            <a href="{{ path('app_admin_courants_new') }}">Ajouter Courant</a>
        </button>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for courant in courants %}
                <tr>
                    <td>{{ courant.nomCourant }}</td>
                    <td>
                        <a href="{{ path('app_admin_courants_edit', { 'id': courant.id}) }}">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('app_admin_courants_delete', { 'id': courant.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <hr/>
        <h2>Types</h2>
        <button type="button" class="btn" style="margin-left: 20px">
            <a href="{{ path('app_admin_types_new') }}">Ajouter Type</a>
        </button>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.nomType }}</td>
                    <td>
                        <a href="{{ path('app_admin_types_edit', { 'id': type.id}) }}">Modifier</a>
                    </td>
                    <td>
                        <a href="{{ path('app_admin_types_delete', { 'id': type.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}