{% extends 'Admin/adminbase.html.twig' %}

{% block content %}
    <div id="admin-content">
        <h1 id="main-title">Cours Animés</h1>
        {% if 'ROLE_PROFESSEUR' in app.user.roles %}
            <button type="button" class="btn">
                <a href="{{ path('app_admin_cours_new') }}">Ajouter un cours</a>
            </button>
        {% endif %}
        <div style="padding: 20px">
        <hr/>
        <h2>À venir</h2>
    <div class="table-responsive" style="padding:20px">
        <hr>
        <table class="table">
            <thead>
            <tr>
                <th>Nom du cours</th>
                <th>Type de danse</th>
                <th>Salle</th>
                <th>Niveau</th>
                <th>Début du cours</th>
                <th>Fin du cours</th>
                <th>Place Restantes</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for cour in coursvenir %}
                <tr>
                    <td>{{ cour.nomCours }}</td>
                    <td>{{ cour.type.nomType }}</td>
                    <td>{{ cour.salle.nomSalle }}</td>
                    <td>{{ cour.niveau.nomNiveau }}</td>
                    <td>{{ cour.dateDebut|date('d-m-Y H:i') }}</td>
                    <td>{{ cour.dateFin|date('d-m-Y H:i') }}</td>
                    <td>{{ cour.placesRestantes }}</td>
                    <td><a href="{{ path('app_cours_show', { 'id': cour.id}) }}">Détails</a></td>
                    <td><a href="{{ path('app_admin_cours_edit', { 'id': cour.id}) }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <hr>
        <h2>Passés</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Nom du cours</th>
                <th>Type de danse</th>
                <th>Salle</th>
                <th>Niveau</th>
                <th>Début du cours</th>
                <th>Fin du cours</th>
                <th>Place Restantes</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for cour in courspasse %}
                <tr>
                    <td>{{ cour.nomCours }}</td>
                    <td>{{ cour.type.nomType }}</td>
                    <td>{{ cour.salle.nomSalle }}</td>
                    <td>{{ cour.niveau.nomNiveau }}</td>
                    <td>{{ cour.dateDebut|date('d-m-Y H:i') }}</td>
                    <td>{{ cour.dateFin|date('d-m-Y H:i') }}</td>
                    <td>{{ cour.placesRestantes }}</td>
                    <td><a href="{{ path('app_cours_show', { 'id': cour.id}) }}">Détails</a></td>
                    <td><a href="{{ path('app_admin_avis_showByCours', { 'id': cour.id}) }}">Voir les avis</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}